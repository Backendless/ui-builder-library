    {
      "type": "checkbox",
      "name": "highlightCodeOutline",
      "label": "Highlight Code Outline",
      "showInSettings": true,
      "defaultValue": true,
      "hasLogicHandler": false,
      "handlerId": "highlightCodeOutlineLogic"
    },
    {
