  "type": "custom",
  "category": "Custom Components",
  "properties": [
    {
      "type": "checkbox",
      "name": "highlightScanRegion",
      "label": "Highlight Scan Region",
      "showInSettings": true,
      "hasLogicHandler": false,
      "handlerId": "highlightScanRegionLogic",
      "defaultValue": true
