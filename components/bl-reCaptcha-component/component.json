{
  "id": "c_3a5f07d6ce793a6d8bff0dc56b1871ba",
  "name": "ReCaptcha",
  "description": "This component allows you to upgrade your security from bots when need to send some form",
  "showInToolbox": true,
  "faIcon": "shield-alt",
  "mainJS": "dist/index.js",
  "type": "custom",
  "category": "Custom Components",
  "properties": [
    {
      "type": "select",
      "name": "verificationType",
      "label": "Verification Type",
      "showInSettings": true,
      "defaultValue": "image",
      "hasLogicHandler": false,
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "audio",
          "label": "Audio"
        }
      ]
    },
    {
      "type": "select",
      "name": "type",
      "label": "Type",
      "showInSettings": true,
      "defaultValue": "normal",
      "hasLogicHandler": true,
      "handlerId": "typeLogic",
      "handlerLabel": "Type Logic",
      "dataBinding": true,
      "options": [
        {
          "value": "compact",
          "label": "Compact"
        },
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "invisible",
          "label": "Invisible"
        }
      ],
      "handlerDescription": "This handler allow determining the reCaptcha size."
    },
    {
      "type": "select",
      "name": "badge",
      "label": "Badge",
      "showInSettings": true,
      "defaultValue": "bottomright",
      "hasLogicHandler": false,
      "handlerId": "badgeLogic",
      "options": [
        {
          "value": "bottomright",
          "label": "Bottom-Right"
        },
        {
          "value": "bottomleft",
          "label": "Bottom-Left"
        },
        {
          "value": "inline",
          "label": "Inline"
        }
      ]
    },
    {
      "type": "select",
      "name": "theme",
      "label": "Theme",
      "showInSettings": true,
      "defaultValue": "light",
      "hasLogicHandler": true,
      "handlerId": "themeLogic",
      "handlerLabel": "Theme Logic",
      "dataBinding": true,
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ],
      "handlerDescription": "This handler allows determining the style theme"
    }
  ],
  "eventHandlers": [
    {
      "name": "onErrored",
      "label": "On Errored",
      "handlerDescription": "This event is triggered when the challenge errored, most likely due to network issues."
    }
  ],
  "actions": [
    {
      "id": "onTokenSent",
      "label": "On Token Sent",
      "hasReturn": true
    },
    {
      "id": "onPassed",
      "label": "On Pass(ed)",
      "hasReturn": true
    }
  ],
  "settings": [
    {
      "type": "text",
      "name": "siteKey",
      "title": "Site Key",
      "description": "This setting allows determining the site key for reCaptcha"
    }
  ]
}
